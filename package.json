{
  "name": "standard-monorepo",
  "version": "0.5.0",
  "author": "FlÃ¡vio Carvalho",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "standard-monorepo": "./bin/run"
  },
  "scripts": {
    "format:all": "prettier '**/*.{js,jsx,ts,tsx,json,css}' --write",
    "format:check": "prettier '**/*.{js,jsx,ts,tsx,json,css}' --check",
    "build": "rm -rf lib && tsc -b",
    "test": "jest",
    "update:readme": "oclif-dev manifest && oclif-dev readme && rm -f oclif.manifest.json && git add README.md",
    "prepublishOnly": "yarn build && yarn test && yarn update:readme"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn update:readme",
      "commit-msg": "./bin/run commit $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "chalk": "4.1.0",
    "execa": "^5.0.0",
    "glob": "7.1.6",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.24.1",
    "@types/inquirer": "7.3.3",
    "@types/jest": "26.0.15",
    "@types/lodash": "4.14.165",
    "@types/node": "10.17.48",
    "auto": "10.29.2",
    "globby": "11.0.1",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "tslib": "2.0.3",
    "typescript": "4.1.2"
  },
  "peerDependencies": {},
  "homepage": "https://github.com/imflavio/standard-monorepo",
  "bugs": "https://github.com/imflavio/standard-monorepo/issues",
  "repository": "imflavio/standard-monorepo",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "standard-monorepo",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "dist",
    "src",
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "jest": {
    "automock": true
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10"
  },
  "volta": {
    "node": "14.15.1"
  }
}
